@model InformacoesMarvel.Models.PersonagemVM


    <vc:Summary></vc:Summary>
    
    <div class="mb-5">
        <div class="card border-secondary-2">
            <img src="@Html.DisplayFor(p => p.ImagemPath)" class="card-img-top" alt="...">
            <div class="card-body">
                <h1 class="card-title text-wrap">@Html.DisplayFor(p => p.Nome)</h1>
                <p class="card-text">@Html.DisplayFor(p => p.Descricao)</p>
            </div>
        </div>
    </div>

    
    <h2 class="mt-5">
        Revistas em que participa
    </h2>

    <div class="row mt-5">
    
        @if (Model.Comics != null && Model.Comics.Any())
        {
            @foreach (var item in Model.Comics)
            {
                <div class="col-sm-6 col-lg-3 mb-5">
                    <div class="card border-secondary-2">
                        <img src="@Html.DisplayFor(modelItem => item.ImagemPath)" class="img-revista-miniatura" alt="...">
                        <div class="card-body">
                            <h5 class="card-title text-wrap">@Html.DisplayFor(model => item.Titulo)</h5>                        
                            <a asp-action="Comic" asp-route-id="@item.Id" class="btn btn-outline-secondary">More</a>
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
            <h5 class="mt-5">Não foram econtrados registros para essa soclicitação!</h5>
        }
    </div>


