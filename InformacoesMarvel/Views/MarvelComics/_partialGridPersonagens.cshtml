@model IEnumerable<InformacoesMarvel.Models.PersonagemVM>

<div class="row">
    <vc:Summary></vc:Summary>
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-3 mb-5">
                <div class="card border-secondary-2">
                    <img src="@Html.DisplayFor(modelItem => item.ImagemPath)" class="img-personagem-miniatura" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-wrap">@Html.DisplayFor(model => item.Nome)</h5>
                        @*<p class="card-text">@Html.DisplayFor(model => item.Descricao)</p>*@
                        <a asp-action="Personagem" asp-route-id="@item.Id" class="btn btn-outline-secondary">More</a>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <h5 class="mt-5">Não foram econtrados registros para essa soclicitação!</h5>
    }
</div>


